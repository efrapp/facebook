<%= form_for(@post) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    <%= hidden_field_tag(:checked_url, request.original_url) %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "file-button" %>
  </span>
  <%= f.submit "Post", class: "btn btn-primary post-button" %>

<% end %>
