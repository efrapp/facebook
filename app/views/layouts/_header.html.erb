<header class="navbar navbar-fixed-top head">
  <div class="container post-container">
    <div class="row">
      <div class="col-md-3">
        <div class="text-right navbar-text navbar-right">
           <%=link_to image_tag("fb-logo.png",size: 24,class: 'navbar-link logo'),users_index_path %>
        </div>
      </div>
      <div class="col-md-5 navbar-text">
        <%= search_field_tag 'search','Search for a user' %>
      </div>

      <div class="col-md-4 navbar-text">
          <div class="navbar-nav profile-options">
            <p>
              <% if user_signed_in? %>
                <%= link_to current_user.first_name, edit_user_registration_path, :class => 'navbar-link' %> |
                <%= link_to "Start page", posts_index_path, :class => 'navbar-link'  %> |
              <% else %>
                <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
                <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
              <% end %>
            </p>
          </div>
          <div class="navbar-nav notifications ">
              <%= link_to "",users_index_path,class: "friend_request navbar-nav" %>
              <%= link_to "",users_index_path,class: "message navbar-nav" %>
              <%= link_to "",users_index_path,class: "notification navbar-nav" %> |
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link',id: "Logout"  %>
          </div>
      </div>
    </div>
  </div>
</header>
<div class="position-of-pages">
</div>
