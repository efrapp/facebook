<header class="navbar navbar-fixed-top head">
  <div class="container post-container">
    <div class="row">
      <div class="col-md-3">
        <div class="text-right navbar-text navbar-right">
           <%=link_to image_tag("fb-logo.png",size: 24,class: 'navbar-link logo'),users_path %>
        </div>
      </div>
      <div class="col-md-5 navbar-text">
        <%= render 'shared/search_form' %>
      </div>

      <div class="col-md-4 navbar-text not-info">
          <div class="navbar-nav">
            <p class="profile-options">
              <% if user_signed_in? %>
                <%= image_tag current_user.image.url,size: '30x30',class: 'header-profile-image' if current_user.image? %>
                <%= link_to current_user.first_name, user_path(current_user), :class => 'navbar-link' %> |
                <%= link_to "Start page", posts_path, :class => 'navbar-link'  %> |
              <% else %>
                <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
                <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
              <% end %>
            </p>
          </div>
          <div class="navbar-nav notifications ">
              <%= link_to "",friend_requests_path,class: "friend_request navbar-nav" %>
              <%= link_to "",users_path,class: "message navbar-nav" %>
              <%= link_to "",users_path,class: "notification navbar-nav" %> |
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link',id: "Logout"  %>
          </div>
      </div>
    </div>
  </div>
</header>
<div class="position-of-pages">
</div>
